[Unit]
Description={{ item }} backup
After={{ item }}.service
Requires={{ item }}.service

[Service]
Type=forking
ExecStart=/bin/sh -c '/usr/bin/find /backup/{{ item }}/ -maxdepth 1 -mtime +7 -exec /usr/bin/rm -rf {} \; ; /usr/bin/tar cjvf /backup/{{ item }}/{{ item }}-`/usr/bin/date -Iminutes`.tar.bz2 /etc/{{ item }}*'
RemainAfterExit=yes
StandardOutput=journal

[Install]
WantedBy=multi-user.target
