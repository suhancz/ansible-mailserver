[Unit]
Description=SSL backup

[Service]
Type=forking
ExecStart=/bin/sh -c '/usr/bin/find /backup/ssl/ -maxdepth 1 -mtime +7 -exec /usr/bin/rm -rf {} \; ; /usr/bin/tar cjvf /backup/ssl/ssl-`/usr/bin/date -Iminutes`.tar.bz2 /etc/letsencrypt'
RemainAfterExit=yes
StandardOutput=journal

[Install]
WantedBy=multi-user.target
